<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#000">
	
	<com.jw.galary.img.view.ViewPagerFixed
			android:id="@+id/viewpager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>
	
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		
		<include
				android:id="@+id/top_bar"
				layout="@layout/include_top_bar"/>
		
		<LinearLayout
				android:id="@+id/bottom_bar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:background="#cc22292c"
				android:orientation="vertical"
				tools:visibility="visible">
			<android.support.v7.widget.RecyclerView
					android:id="@+id/rv_preview"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
			
			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="48dp">
				
				<TextView
						android:id="@+id/tv_preview_edit"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#ffffff"
						android:layout_centerVertical="true"
						android:layout_marginRight="12dp"
						android:layout_marginLeft="12dp"
						android:text="编辑"/>
				<com.jw.galary.img.view.SuperCheckBox
						android:id="@+id/cb_preview_origin"
						style="@style/SuperCheckboxTheme"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_centerInParent="true"
						android:paddingLeft="8dp"
						android:text="原图"
						android:textColor="#FFF"
						android:visibility="visible"/>
				
				<com.jw.galary.img.view.SuperCheckBox
						android:id="@+id/cb_check"
						style="@style/SuperCheckboxTheme"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:layout_marginRight="12dp"
						android:drawablePadding="4dp"
						android:includeFontPadding="true"
						android:paddingLeft="8dp"
						android:text="选择"
						android:textColor="#ffffff"/>
			</RelativeLayout>
			
			<View
					android:id="@+id/margin_bottom"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:background="#000"/>
		</LinearLayout>
	
	</RelativeLayout>


</FrameLayout>