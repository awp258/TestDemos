<resources>

    <style name="LibraryTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WeChatToolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/ip_color_primary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="titleTextColor">#FFFFFF</item>
        <item name="subtitleTextColor">#FFFFFF</item>
        <item name="navigationIcon">@drawable/theme_btn_toolbar_back</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


</resources>
